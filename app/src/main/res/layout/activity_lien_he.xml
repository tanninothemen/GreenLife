<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9de0ad"
    tools:context=".activity.LienHeActivity">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Chi tiết liên hệ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#ff8476"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_avata"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="100dp" />
            <TextView
                android:layout_margin="8dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Nguyễn Thành Tân"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="#f8b195"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_mssv"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="100dp" />
            <TextView
                android:layout_margin="8dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="MSSV: 1611060822"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="#f7d84f"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_email"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="100dp" />
            <TextView
                android:layout_margin="8dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Email:tanninothemen@gmail.com"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>